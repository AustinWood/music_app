<h1>Add your favorite band!</h1>

<form action="<%= bands_url %>" method="post">
  <input
    type="hidden"
    name="authenticity_token"
    value="<%= form_authenticity_token %>">

  <label for="band_name">Name:</label>
  <input type="text"
    name="band[name]"
    value=""
    id="band_name">

  <br>
  <br>
  <input type="submit" value="Submit">
</form>
